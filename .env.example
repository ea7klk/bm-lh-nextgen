# Server Configuration
PORT=3000
BASE_URL=http://localhost:3000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=bm_lastheard
DB_PASSWORD=your-secure-db-password
DB_NAME=bm_lastheard

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@example.com

# Email Security Settings (optional)
# EMAIL_SECURE: Use direct SSL/TLS connection (true for port 465, false for port 587)
# If not set, automatically determined based on port (true for 465, false otherwise)
EMAIL_SECURE=false

# EMAIL_REQUIRE_TLS: Require STARTTLS for port 587 connections (true/false)
# Set to true if your SMTP server requires STARTTLS before authentication
# Default: false
EMAIL_REQUIRE_TLS=false

# Admin Configuration
# ADMIN_PASSWORD: Password for accessing the admin panel at /admin
# Set a strong password to protect access to API key management
ADMIN_PASSWORD=your-secure-admin-password

# JWT Secret
# JWT_SECRET: Secret key for signing JWT tokens for user authentication
# Generate a strong random string (at least 32 characters)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Matomo Analytics Configuration (optional)
# MATOMO_ENABLED: Enable/disable Matomo tracking (true/false)
# Set to true to enable Matomo analytics integration
MATOMO_ENABLED=false

# MATOMO_URL: Your Matomo installation URL (without trailing slash)
# Example: https://analytics.example.com or https://example.com/matomo
MATOMO_URL=https://your-matomo-instance.com

# MATOMO_SITE_ID: The site ID from your Matomo installation
# You can find this in your Matomo dashboard under Administration > Websites
MATOMO_SITE_ID=1
