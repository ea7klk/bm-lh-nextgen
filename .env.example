# Server Configuration
PORT=3000
BASE_URL=http://localhost:3000

# PostgreSQL Database Configuration (for PostgreSQL container)
POSTGRES_USER=bm_lh_user
POSTGRES_PASSWORD=your-secure-db-password
POSTGRES_DB=bm_lh_nextgen

# Database Connection Configuration (for application)
# Note: DB_HOST uses the fixed container name 'bm-lh-postgres' from docker-compose.yml
DB_HOST=bm-lh-postgres
DB_PORT=5432
DB_USER=bm_lh_user
DB_PASSWORD=your-secure-db-password
DB_NAME=bm_lh_nextgen

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@example.com

# Email Security Settings (optional)
# EMAIL_SECURE: Use direct SSL/TLS connection (true for port 465, false for port 587)
# If not set, automatically determined based on port (true for 465, false otherwise)
EMAIL_SECURE=false

# EMAIL_REQUIRE_TLS: Require STARTTLS for port 587 connections (true/false)
# Set to true if your SMTP server requires STARTTLS before authentication
# Default: false
EMAIL_REQUIRE_TLS=false

# Admin Configuration
# ADMIN_PASSWORD: Password for accessing the admin panel at /admin
# Set a strong password to protect access to API key management
ADMIN_PASSWORD=your-secure-admin-password
